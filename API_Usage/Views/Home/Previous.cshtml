@model PreviousVM

@{
    ViewData["Title"] = "Previous";
}

<h2>Previous</h2>
<h4>Run symbols and save data if the drop down list is empty</h4>
<hr />

<form asp-controller="Home" asp-action="Previous" method="get">
    <select name="symbol">
        @foreach (var company in Model.Companies)
        {
            <option value=@company.symbol selected>@company.name</option>
        }
    </select>
    <input type="submit" value="Get Previous" />
</form>


